<!DOCTYPE html>
<html>
  <head>
    <title>RoomApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <%# <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" rel="stylesheet">
  </head>

  <body>
    <header>
      <div class="header_link_container">
        <div class="header_left">
            <h3 class="title" id="title_top"><%= link_to "ROOM SHARE","/" %></h3>
            <div class="search_area">
              <form action="/rooms/search" method="get">
                <input type="text" name="address" placeholder="エリア" />
                <input type="text" name="keyword" placeholder="キーワード" />
                <input type="submit" value="検索"/>
              </form>
            </div>
          </div>
          <% if @current_user %>
            <div class="user_info_top">
              <div class="title"><%= @current_user.user_name %></div>
              <div class="hamburger-menu">
                <input type="checkbox" id="menu-btn-check" />
                <label for="menu-btn-check" class="menu-btn">
                  <% if @current_user.image? %>
                    <%= image_tag @current_user.image.url, :alt => "アイコン画像", :class => "user_icon", :id => "header_user_icon", :size => "100x100" %>
                  <% else %>
                    <%= image_tag "/assets/default_user.jpg", :alt => "アイコン画像", :class => "user_icon"%>
                  <% end %>
                </label>
                <div class="menu-content">
                  <ul>
                    <li><%= link_to "ルーム登録", "/rooms/new" %></li>
                    <li><%= link_to "予約済みルーム一覧", "/reservations" %></li>
                    <li><%= link_to "登録済みルーム一覧", "/rooms/posts" %></li>
                    <li><%= link_to "設定", "/users/account" %></li>
                    <li><%= link_to "ログアウト", "/logout", data: { turbo_method: :delete } %></li>
                  </ul>
                </div>
              </div>
            </div>
          <% else %>
            <div class="button" id=user_button_form">
              <%= link_to "ログイン","/users/login_form",class:"button", id:"login_button" %>
              <%= link_to "登録","/users/new",class:"button", id:"register_button" %>
            </div>
          <% end %>
      </div>
    </header>

    <%= yield %>

    <footer>
      <div class="title">
        <p style="color: #fff; text-align: center;">copyright syun</p>
      </div>
    </footer>
  </body>
</html>
