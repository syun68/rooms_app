<div class="room_index_container">

  <h2>登録済みルーム一覧</h2>

  <table class="room_index_table">
    <thead>
      <tr>
        <th>ルーム画像</th>
        <th>ルーム名</th>
        <th>ルーム紹介</th>
        <th>料金</th>
        <th>作成日</th>
      </tr>
    </thead>

    <tbody>
      <% @rooms.each do |room| %>
        <tr>
          <td>
            <%= image_tag room.image.url , :alt => "ルーム画像", :size => "200x100"%>
          </td>
          <td>
            <%= link_to room.name, "/rooms/#{room.id}", :class => "link_room_name" %>
          </td>
          <td>
            <%= room.introduction %>
          </td>
          <td>
            ￥<%= room.fee %>
          </td>
          <td>
            <%= room.created_at %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>
